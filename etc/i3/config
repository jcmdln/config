# bindsym XF86AudioPrev  exec --no-startup-id pactl previous

# Audio (Sndio)
bindsym XF86AudioRaiseVolume exec --no-startup-id \
mixerctl outputs.master=+5

bindsym XF86AudioLowerVolume exec --no-startup-id \
mixerctl outputs.master=-5

bindsym XF86AudioMute exec --no-startup-id \
mixerctl outputs.master.mute=toggle

# Backlight (brightnessctl)
# bindsym XF86MonBrightnessUp   exec --no-startup-id \
# brightnessctl set 5%+
#
# bindsym XF86MonBrightnessDown exec --no-startup-id \
# brightnessctl set 5%-

# Backlight (xbacklight)
# bindsym XF86MonBrightnessUp   exec --no-startup-id xbacklight -inc 5
# bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5

# Screenshot (scrot)
bindsym $mod+p exec --no-startup-id \
scrot $HOME/Pictures/`date +%Y-%m-%d_%H:%M:%S`.png

bindsym $mod+Shift+p --release exec --no-startup-id \
scrot -s $HOME/Pictures/`date +%Y-%m-%d_%H:%M:%S`.png
